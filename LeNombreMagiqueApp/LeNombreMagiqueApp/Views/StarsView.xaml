<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LeNombreMagiqueApp.Views.StarsView">
  <ContentView.Content>
        <StackLayout Spacing="0">
            <AbsoluteLayout Rotation="-10" Margin="0,-4">
                <BoxView Color="{StaticResource shadowColor}" AbsoluteLayout.LayoutFlags="WidthProportional" AbsoluteLayout.LayoutBounds="-10,8,0.514,42"/>
                <Image x:Name="star1" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0.5,0"
            Source="star.png" HeightRequest="60"/>
            </AbsoluteLayout>
            <AbsoluteLayout Rotation="-10" Margin="0,-15">
                <BoxView Color="{StaticResource shadowColor}" AbsoluteLayout.LayoutFlags="WidthProportional" AbsoluteLayout.LayoutBounds="-5,9,0.65,42"/>
                <Image x:Name="star2" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0.678,0"
                Source="star.png" HeightRequest="60"/>
            </AbsoluteLayout>
            <AbsoluteLayout Rotation="-10" Margin="0,-1">
                <BoxView Color="{StaticResource shadowColor}" AbsoluteLayout.LayoutFlags="WidthProportional" AbsoluteLayout.LayoutBounds="-10,8,0.577,42"/>
                <Image x:Name="star3" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0.575,0"
                Source="star.png" HeightRequest="60"/>
            </AbsoluteLayout>
        </StackLayout>
  </ContentView.Content>
</ContentView>